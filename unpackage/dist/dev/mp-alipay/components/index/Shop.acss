
.commodity{
	display: flex;
}
.commodity-item{
	padding-bottom: 20rpx;
}
.commodity-img{
	width:100%;
}
.commodity-context{
	text-align: center;
}
.commodity-name{
	overflow:hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	color: #333333;
	word-break: break-all;
	padding:6rpx 20rpx;
}
.oprice{
	text-decoration: line-through;
	font-size: 24rpx;
	color: #999999;
}
.discount{
	border-radius: 4rpx;
	border: 1px solid #FF3333;
	padding: 2rpx 10rpx;
	font-size:20rpx;
	color:#FF3333;
}


.shop-bigimg{
	width: 100%;
	height: 350rpx;
	display: block;
}
.scroll-content{
	width: 100%;
	white-space: nowrap;
}
.scroll-item{
	display: inline-block;
}

